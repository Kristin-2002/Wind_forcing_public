}
@article{Bryden2021,
   abstract = {Continuous observations of ocean circulation at 26°N in the subtropical Atlantic Ocean have been made since April 2004 to quantify the strength and variability in the Atlantic Meridional overturning circulation (AMOC), in which warm, upper waters flow northward and colder deep waters below 1100 m depth return southward. The principal components of the AMOC are northward western boundary current transport in the Gulf Stream and Antilles Current, northward surface Ekman transport and southward thermocline recirculation, all of which are generally considered to be part of the wind-driven circulation. Southward flowing deep waters below 1100 m depth are usually considered to represent the buoyancy-driven circulation. We argue that the Gulf Stream is partially wind-driven but also partially buoyancy-driven as it returns upper waters upwelled in the global ocean back to water mass formation regions in the northern Atlantic. Seasonal to interannual variations in the circulation at 26°N are principally wind-driven. Variability in the buoyancy-driven circulation occurred in a sharp reduction in 2009 in the southward flow of Lower North Atlantic Deep Water when its transport decreased by 30% from pre-2009 values. Over the 14-year observational period from 2004 to 2018, the AMOC declined by 2.4 Sv from 18.3 to 15.9 Sv.},
   author = {Harry L. Bryden},
   doi = {10.1098/rspa.2021.0172},
   issn = {1364-5021},
