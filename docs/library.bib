   issue = {0123456789},
   journal = {Climate Dynamics},
   keywords = {AMOC,Atlantic Meridional Overturning Circulation,LNADW,Labrador Sea,Lower North Atlantic Deep Water,NAC,North Atlantic Current,OSNAP,RAPID-MOCHA,Surface heat fluxes,Water mass transformation,amoc,atlantic meridional overturning,circulation,labrador sea,lnadw,lower north atlantic deep,nac,north atlantic current,osnap,rapid-mocha,surface heat fluxes,water,water mass transformation},
   publisher = {Springer Berlin Heidelberg},
   title = {Fast mechanisms linking the Labrador Sea with subtropical Atlantic overturning},
   url = {https://doi.org/10.1007/s00382-022-06459-y},
