   isbn = {0894-8755},
   issn = {08948755},
   issue = {1},
   journal = {Journal of Climate},
   keywords = {Atlantic Ocean,Atmosphere-ocean interaction,Climate variability,Oceanic mixed layer,Sea surface temperature,Tropics},
