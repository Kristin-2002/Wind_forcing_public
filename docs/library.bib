   issn = {00223670},
   issue = {11},
   journal = {Journal of Physical Oceanography},
   month = {11},
   pages = {2698-2713},
   title = {Seasonal and interannual variations of oceanic conditions in the Angola Dome},
   volume = {37},
   year = {2007},
}
