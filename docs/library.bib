   pages = {2348-2373},
   title = {Interannual Variability of the Atlantic North Equatorial Undercurrent and Its Impact on Oxygen},
   volume = {124},
   url = {http://doi.wiley.com/10.1029/2018JC014760 https://onlinelibrary.wiley.com/doi/abs/10.1029/2018JC014760},
   year = {2019},
}
@article{Lozier2019,
