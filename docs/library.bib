   month = {8},
   pages = {2075-2094},
   title = {The Nature of Eddy Kinetic Energy in the Labrador Sea: Different Types of Mesoscale Eddies, Their Temporal Variability, and Impact on Deep Convection},
   volume = {49},
   url = {https://journals.ametsoc.org/view/journals/phoc/49/8/jpo-d-18-0243.1.xml},
   year = {2019},
}
