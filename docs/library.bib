   issn = {02773791},
   journal = {Quaternary Science Reviews},
   keywords = {Isotopes,Last Glacial Maximum,Last Interglacial,Oxygen-18,Paleoceanography,Paleosalinity},
   pages = {350-364},
   publisher = {Elsevier},
   title = {Reconstructing paleosalinity from δ 18 O: Coupled model simulations of the Last Glacial Maximum, Last Interglacial and Late Holocene},
