   doi = {10.1016/j.dsr.2021.103533},
   issn = {09670637},
   journal = {Deep Sea Research Part I: Oceanographic Research Papers},
   keywords = {Ageostrophic velocity,Brazil-Malvinas Confluence,Hydrographic data,Lagrangian description,Ocean currents,River plume},
   month = {6},
