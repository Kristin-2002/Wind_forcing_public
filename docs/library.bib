   url = {https://onlinelibrary.wiley.com/doi/full/10.1029/97JC00480 https://onlinelibrary.wiley.com/doi/abs/10.1029/97JC00480 https://agupubs.onlinelibrary.wiley.com/doi/10.1029/97JC00480},
