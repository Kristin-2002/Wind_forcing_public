   keywords = {and water quality,autocorrelation,considerable attention in the,i,i n t r,o d u c,rainfall,streamflow,t i o n,time series analysis,time series has received,trend analysis,trend detection in hydrologic},
   month = {1},
   pages = {182-196},
   title = {A modified Mann-Kendall trend test for autocorrelated data},
   volume = {204},
   url = {http://ascopubs.org/doi/10.1200/JCO.2018.36.15_suppl.522 https://linkinghub.elsevier.com/retrieve/pii/S002216949700125X},
