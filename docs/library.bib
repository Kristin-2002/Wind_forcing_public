   author = {T. Fichefet and M. A. Morales Maqueda},
   doi = {10.1029/97JC00480},
   issn = {2156-2202},
   issue = {C6},
   journal = {Journal of Geophysical Research: Oceans},
   keywords = {doi:10.1029/97JC00480,http://dx.doi.org/10.1029/97JC00480},
   month = {6},
   pages = {12609-12646},
   publisher = {John Wiley & Sons, Ltd},
   title = {Sensitivity of a global sea ice model to the treatment of ice thermodynamics and dynamics},
