   doi = {10.1016/j.csr.2013.10.001},
   issn = {02784343},
   journal = {Continental Shelf Research},
   keywords = {Abrolhos bank,Brazil Current,Mesoscale activity,Numerical modeling},
   month = {11},
   pages = {46-60},
   publisher = {Pergamon},
   title = {The roles of vertical shear and topography on the eddy formation near the site of origin of the Brazil Current},
