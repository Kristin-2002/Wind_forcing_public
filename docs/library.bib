   journal = {Journal of Climate},
   keywords = {Atmosphere-ocean interaction,ENSO,Interannual variability,Multidecadal variability,Teleconnections,Tropical variability},
   pages = {515-536},
   title = {Is there evidence of changes in tropical Atlantic variability modes under AMO phases in the observational record?},
   volume = {31},
   year = {2018},
}
@article{Eliassen1961,
   abstract = {The flow of wave energy in stationary, two-dimensional gravity waves of small amplitude in a basic current where the velocity and stability varies with height, is studied. The vertical flux of wave energy is found to vary with height in proportion to the wind speed. In layers where the wave motion of a particular wave length is of the internal type, the motion may be subdivided into two parts, one wave carrying wave energy upward, and the other carrying wave energy downward. In the case of mountain waves, the wave with upward energy flow may be interpreted as the incident wave, set up by the mountain, whereas the wave carrying energy downward is caused by reflection of the incident wave in higher layers in the atmosphere. Such reflection is generally found to take place when wind or stability varies with height. The reflection coefficients in two- and threelayer atmospheres are calculated. The results are applied to a distribution of wind and stability typical of situations in which mountain waves occur. It was found that, depending on the wave length, 65-100 per cent of the wave energy was reflected from layers of strong wind in the upper troposphere. In middle latitudes in winter, wave energy may be transmitted to the lower ionosphere. A study is also made of the energy transfer for long quasi-static mountain waves.},
